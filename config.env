# DAX Optimizer MCP Server Configuration

# Environment Variables Required:
# OPENAI_API_KEY=your_openai_api_key

# Power BI Connection Details:
# These will be provided when calling connect_powerbi tool:
# - xmla_endpoint: "powerbi://api.powerbi.com/v1.0/myorg/{workspace_name}"
# - tenant_id: Your Azure AD tenant ID
# - client_id: Service Principal application ID  
# - client_secret: Service Principal secret
# - initial_catalog: Dataset/semantic model name

# Example XMLA endpoint from your setup:
# powerbi://api.powerbi.com/v1.0/myorg/HelixFabric-Insights
# Database: "Azure Data Insights - OneLake"

# Knowledge Base Configuration:
KB_CACHE_DIR=./kb_cache
KB_UPDATE_INTERVAL_HOURS=24

# Optimization Settings:
DEFAULT_MAX_ITERATIONS=3
OPTIMIZATION_TIMEOUT_SECONDS=300

# Performance Thresholds (ms):
EXCELLENT_THRESHOLD=100
GOOD_THRESHOLD=500
MODERATE_THRESHOLD=2000
